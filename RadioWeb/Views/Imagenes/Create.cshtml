@model RadioWeb.Models.IMAGENES

<div class="wrapper wrapper-content animated  ecommerce" style="padding-top: 0px; padding-bottom: 0px; min-height: 400px;">
    @if (Model.OID > 0 ) { 
    <div class="row">
        <div class="alert alert-success alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <strong>Imagen @Model.PATH almacenada!</strong> 
        </div>
    </div>
    }

    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content text-center">
                <h3 class="m-b-xxs">@Model.NOMBREPACIENTE</h3>
                <small>@Model.FECHAEXPLORACION - @Model.HORA - @Model.EXPLORACION</small>
            </div>
        </div>
    </div>
    
    <div class="row">

        @using (Html.BeginForm("Create", "Imagenes", null, FormMethod.Post,
                              new { @class = "form-group", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(m=>m.IOR_EXPLORACION)
            @Html.HiddenFor(m => m.IOR_PACIENTE)
            <div class="form-group">
                <div class="editor-label">
                    Ruta Imagen
                </div>
                <div class="editor-field">
                    <input id="ImagePath" class="form-control" type="file" accept="image/*" name="file" />
                    <small class="text-muted">Seleccione una imágen de su dispositivo para incorporar al programa</small>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NOMBRE)
                @Html.TextBoxFor(m => Model.NOMBRE, new { @class = "form-control", autofocus = "autofocus", @style = "text-transform:uppercase", placeHolder = "Nombre de la Imágen" })
                <p class="help-block text-danger"> @Html.ValidationMessageFor(m => Model.NOMBRE)</p>
            </div>
            <div class="form-group">
                <p class="pull-right">
                    <input type="submit" class="btn btn-success" value="Guardar" />
                </p>
            </div>
        
        }
    </div>



</div>


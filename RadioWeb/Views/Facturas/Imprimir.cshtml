@model RadioWeb.ViewModels.VWFactura
@{
    Layout = String.Empty;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Factura @Model.COD1 @Model.NUM_FAC</title>

    <style type="text/css">
        .invoice-box {
            max-width: 800px;
            margin: auto;
            border: 1px solid #eee;
            box-shadow: 0 0 10px rgba(0, 0, 0, .15);
            font-size: 14px;
            line-height: 24px;
            font-family: 'Verdana, Geneva, Tahoma, sans-serif';
            color: #555;
        }

            .invoice-box table {
                width: 100%;
                line-height: inherit;
            }

                .invoice-box table td {
                    padding: 5px;
                    vertical-align: top;
                }

                .invoice-box table tr td:nth-child(2) {
                    text-align: right;
                }


                .invoice-box table tr.top table td.title {
                    font-size: 14px;
                    line-height: 45px;
                    color: #333;
                }



                .invoice-box table tr.heading td {
                    background: #eee;
                    border-bottom: 1px solid #ddd;
                    font-weight: bold;
                }

                .invoice-box table tr.details td {
                    padding-bottom: 20px;
                }

                .invoice-box table tr.item td {
                    border-bottom: 1px solid #eee;
                    font-size: 11px;
                }

                .invoice-box table tr.nif td {
                    font-weight: bold;
                    font-size: 11px;
                }

                .invoice-box table tr.cuadroBorde td {
                    border: 1px solid #808080;
                    padding-left: 100px;
                }

        #datosFactura {
            width: 50%;
            font-size: 12px;
            border: 1px solid #808080;
        }

        .invoice-box table tr.alinearDerecha td {
            text-align: right;
        }

        .invoice-box table tr.item.last td {
            border-bottom: none;
        }

        .invoice-box table tr.total td:nth-child(2) {
            border-top: 2px solid #eee;
            font-weight: bold;
        }
    </style>
</head>
<body onload="window.print()">
    <div class="invoice-box">
        <table>
            <tr class="nif">
                <td>
                    @if (Model.EMPRESA != null && Model.EMPRESA.Contains("DELFOS"))
                    {
                        if (Model.OWNER == 1)
                        {
                            @:Servei Imatge Molecular i Metabòlic
                            @:<br /> NIF B61150991 <br />
                        }
                        else
                        {
                            @:Servei Imatge Molecular i Metabòlic
                            @:<br /> NIF B61150991 <br />

                        }
                    }

                </td>
            </tr>
        </table>
        <hr />
        <table>
            <tr>
                <td align="right">
                    @Model.FECHA_FAC.ToLongDateString()<br />
                    <span style="font-weight:bold;">Número factura/recibo: @Model.NUM_FAC/@Model.FECHA_FAC.Year-@Model.COD1</span>

                </td>
            </tr>
        </table>

        <table id="datosFactura" align="right">
            <tr>

                <td>
                    @Model.NOMBRE<br />
                    @Model.DIRECCION<br />
                    @Model.CP- @Model.CIUDAD<br />
                    @Model.PROVINCIA
                </td>

            </tr>
            <tr>
                <td style="border-top:1px solid #808080;">
                    DNI/CIF: @Model.DNI
                </td>
            </tr>
        </table>

        <br />

        <table>

            <tr class="heading">
                <td>
                    Concepto
                </td>
                <td align="right" style="margin-right:5px;">
                    Precio
                </td>
            </tr>

            @foreach (var item in Model.LINEAS)
            {
                <tr class="item">
                    <td>
                        @item.TEXTO
                    </td>

                    <td align="right">
                        @item.PRECIO €
                    </td>
                </tr>
            }

            <tr class="total">
                <td></td>

                <td align="right">
                    Total: @Model.TOTALCONIVA€
                </td>
            </tr>
        </table>
    </div>
</body>
</html>


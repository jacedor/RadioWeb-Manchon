@model RadioWeb.ViewModels.VWImprimirFicha
@{
    Layout = String.Empty;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Ficha @Model.PACIENTE</title>

    <style type="text/css">
        .invoice-box {
            max-width: 800px;
            margin: auto;
            border: 1px solid #eee;
            font-size: 12px;
            color: #555;
        }

        #datosPaciente {
            margin-bottom: 8px;
        }

            #datosPaciente li {
                padding: 2px;
            }

        ul li.negrita {
            font-weight: bold;
        }

        .invoice-box table {
            width: 100%;
            line-height: inherit;
        }

            .invoice-box table td {
                padding: 0px;
            }

            .invoice-box table tr td:nth-child(2) {
                text-align: right;
            }


            .invoice-box table tr.top table td.title {
                font-size: 12px;
                line-height: 25px;
                color: #333;
            }

            .invoice-box table tr.heading td {
                background: #eee;
                border-bottom: 1px solid #ddd;
                font-weight: bold;
            }

            .invoice-box table tr.details td {
                padding-bottom: 10px;
            }

            .invoice-box table tr.information td {
                padding: 1px;
                background-color: red;
            }

            .invoice-box table tr.item td {
                border-bottom: 1px solid #eee;
            }

            .invoice-box table tr.bordearriba td {
                border-top: 1px solid black;
            }

            .invoice-box table tr.bordeabajo td {
                border-bottom: 1px solid black;
            }

            .invoice-box table tr.bordeizquierda td {
                border-left: 1px solid black;
            }

            .invoice-box table tr.bordederecha td {
                border-right: 1px solid black;
            }

            .invoice-box table tr.item.last td {
                border-bottom: none;
            }

        .fondomarillo {
            font-weight: bold;
        }

        .fondogris {
            color: black;
        }

        .fondoBlanco {
            color: black;
        }
    </style>
</head>

<body>
    @if (Model.QRCOMPARTIRCASO == "T")
    {
        <table cellpadding="0" cellspacing="0" border="0">
            <tr class="information">
                <td width="900" style="color:red;">
                    EL PACIENTE HA SOL.LICITA LA RECOLLIDA ONLINE - NO IMPRIMIR INFORME E IMATGES
                </td>
            </tr>
        </table>
    }

    <ul style="list-style-type:none;font-size:14px;margin-left:-5px;padding-left:0px;">

        <li>
            ID EXPLO: @Model.OID - ID PAC: @Model.IOR_PACIENTE
            @if (Model.CID == 2)
            {
                <span style="color:red;font-size:19pt;">INGRESADO</span>
            }
        </li>
        <li class="negrita">
            Pacient: @Model.PACIENTE
            @if (!String.IsNullOrEmpty(Model.DNI))
            {
                @Html.Raw(" - DNI:"); @Model.DNI;
            }
        </li>
        <li>
            Data naixement: @Model.FECHAN - Edat: @Model.EDAD


        </li>
        <li>Teléfon: @Model.NUMERO</li>
        <li>Finançament: @Model.NOMBRE</li>
        <li>Prescriptor: @Model.NOMBRECOLEGIADO</li>
        <li>Data Exploracion: @Model.FECHA.ToShortDateString() - @Model.HORA (@Model.HORA_LL)</li>
        <li>Hora impresió: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</li>
        <li>Exploració: @Model.DES_FIL</li>
        @foreach (var item in Model.EXPLOSASOCIADAS)
        {
            if (item.IOR_MASTER == Model.OID || item.OID == Model.IOR_MASTER)
            {
                @String.Concat(item.DES_FIL)
            }
        }
    </ul>



    <div class="invoice-box">

        @if (Model.QRCOMPARTIRCASO == "T")
        {
            <table cellpadding="0" cellspacing="0" border="0">
                <tr class="information">
                    <td width="900" style="color:red;">
                        EL PACIENTE HA SOL.LICITA LA RECOLLIDA ONLINE - NO IMPRIMIR INFORME E IMATGES
                    </td>
                </tr>
            </table>
        }


        <table cellpadding="0" cellspacing="0" border="1">
            <tr>
                <td>

                    <table cellpadding="8" cellspacing="0" border="0">
                        <tr>
                            <td valign="bottom">
                                Malaltia actual/data dx:
                            </td>
                            <td width="430">
                                <br />
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="border-bottom:2px solid black;">
                                &nbsp;
                            </td>
                        </tr>

                    </table>


                    <table cellpadding="8" cellspacing="0" border="0">
                        <tr>
                            <td valign="top" width="75" style="border-bottom:2px solid black;">
                                QMT/Ultima sessio
                            </td>
                            <td width="75" style="border-bottom:2px solid black;">
                                NO &nbsp;&nbsp;&nbsp;&nbsp; SI.................
                            </td>

@model IEnumerable<RadioWeb.Models.AYUDA>
@{
    ViewBag.Title = "Ayuda";
}

@foreach (var ayuda in Model)
{
    <div class="faq-item">
        <div class="row">
            <div class="col-md-6">
                <a data-toggle="collapse" href="#@ayuda.OID" class="faq-question collapsed" aria-expanded="false">@ayuda.TITULO</a>
                <small>Creado por <strong>@ayuda.USERNAME</strong> <i class="fa fa-clock-o"></i> @ayuda.MODIF</small>
            </div>
            <div class="col-md-5">
                <span class="small font-bold">@ayuda.CANAL</span>
                <div class="tag-list">
                    @foreach (string item in ayuda.TAGS.Split(';'))
                    {
                        <span class="tag-item">@item</span>

                    }
                </div>
            </div>
            <div class="col-md-1 text-right">
                <span class="small font-bold">Visitas </span><br>
                @ayuda.VISITADO
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div id="@ayuda.OID" class="panel-collapse collapse" style="">
                    <div class="faq-answer">
                        <p>
                            @Html.Raw(ayuda.TEXTO)
                          
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



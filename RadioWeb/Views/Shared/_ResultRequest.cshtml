@model RadioWeb.Models.Logica.ResultadoRequest


@switch (Model.Resultado)
{
    case RadioWeb.Models.Logica.ResultadoRequest.RESULTADO.SUCCESS:
        <div class="alert alert-success alert-dismissable">
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
           @Model.Mensaje.
        </div>
        break;
    case RadioWeb.Models.Logica.ResultadoRequest.RESULTADO.ERROR:
        <div class="alert alert-danger alert-dismissable">
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
            @Model.Mensaje.
        </div>
        break;
    default:
        break;
}


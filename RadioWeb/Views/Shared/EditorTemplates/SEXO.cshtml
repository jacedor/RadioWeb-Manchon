@model string
@{
      var SEXO =(String.IsNullOrEmpty(Model)? "" : Model );

    var tipos = new SelectList(
        new List<SelectListItem> {

new SelectListItem {Text ="MASCULINO",Value = "H",Selected = "H" == SEXO.ToString()},
new SelectListItem {Text = "FEMENINO",Value = "M", Selected = "M" == SEXO.ToString() }
        }, "Value", "Text", Model
        );

    var defaultHtmlAttributesObject = new { type = "text", @class = "form-control " };

    var htmlAttributesObject = ViewData["htmlAttributes"] ?? new { };
    var htmlAttributes = Html.MergeHtmlAttributes(htmlAttributesObject, defaultHtmlAttributesObject);
}

@Html.DropDownList("",
            tipos,
            htmlAttributes)


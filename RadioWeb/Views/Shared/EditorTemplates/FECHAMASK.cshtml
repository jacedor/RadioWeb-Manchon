@model DateTime?

@{
    var defaultHtmlAttributesObject = new { type = "text", @class = "form-control fecha-mask" };

    var htmlAttributesObject = ViewData["htmlAttributes"] ?? new { };
    var htmlAttributes = Html.MergeHtmlAttributes(htmlAttributesObject, defaultHtmlAttributesObject);
}

@Html.TextBox("", ViewData.TemplateInfo.FormattedModelValue, "{0:dd/MM/yyyy}",
   htmlAttributes)

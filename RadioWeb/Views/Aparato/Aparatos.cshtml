@model RadioWeb.Models.DAPARATOS

@{
    ViewBag.Title = "Mantenimiento de Aparatos";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.OID)
    @Html.HiddenFor(model => model.BORRADO)
    @Html.HiddenFor(model => model.IOR_EMPRESA)
    @Html.HiddenFor(model => model.OWNER)
    @Html.HiddenFor(model => model.CANAL)
    @Html.HiddenFor(model => model.MODIF)

    <div class="tabs-container">
        <ul class="nav nav-tabs">

            <li class="active">
                <a data-toggle="tab" href="#general">Aparato</a>
            </li>

        </ul>

        <div class="tab-content form-horizontal">
            <div id="general" class="tab-pane active">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.BootstrapLabelFor(m => m.COD_FIL)
                            @Html.EditorFor(model => model.COD_FIL)
                            @Html.ValidationMessageFor(model => model.COD_FIL, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.BootstrapLabelFor(m => m.DES_FIL)
                            @Html.EditorFor(model => model.DES_FIL)
                            @Html.ValidationMessageFor(model => model.DES_FIL, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.BootstrapLabelFor(m => m.CID)
                            @Html.DropDownListFor(m => Model.CID, new SelectList(Model.CENTROS, "OID", "NOMBRE"), "", new { @class = "form-control select2" })
                            @Html.ValidationMessageFor(model => model.CID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.BootstrapLabelFor(m => m.IDENTIFICADOR)
                            @Html.EditorFor(model => model.IDENTIFICADOR)
                            @Html.ValidationMessageFor(model => model.IDENTIFICADOR, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.BootstrapLabelFor(m => m.USERNAME)
                            @Html.EditorFor(model => model.USERNAME)
                            @Html.ValidationMessageFor(model => model.USERNAME, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.BootstrapLabelFor(m => m.XEROX)
                            @Html.EditorFor(model => model.XEROX)
                            @Html.ValidationMessageFor(model => model.XEROX, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.BootstrapLabelFor(m => m.KIOSKO_DES)
                            @Html.EditorFor(model => model.KIOSKO_DES)
                            @Html.ValidationMessageFor(model => model.KIOSKO_DES, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.BootstrapLabelFor(model => model.VERS)
                            @Html.DropDownListFor(model => model.VERS, new List<SelectListItem>()
                            {
                                new SelectListItem() { Text = "Visible", Value = "1" },
                                new SelectListItem() { Text = "No Visible", Value = "0" }
                            }, 
                            new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.VERS, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
            </div>
        </div>


        <div class="user-button ibox-content">
            <div class="row">
                <div class="col-md-6">
                    <i class="btn btn-default btn-sm btn-block">@Html.ActionLink("Volver a Lista de Grupos", "Index", "Grupos", new { id = Model.OWNER, tab = "tabAparatos" }, null)</i>
                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary btn-sm btn-block">
                        <i class="fa fa-save"></i>Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>

}







@{
    ViewBag.Title = "Estadisticas Visita";
    RadioWeb.Models.USUARIO oUsuarioLogeado = (RadioWeb.Models.USUARIO)Session["Usuario"];
}


@section estilos{


    <link href="~/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" rel="stylesheet">

}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">
        <div class="col-lg-6">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Por Grupos de Exploración               
                    </h5>

                </div>
                <div class="ibox-content">

                    <canvas id="listaEsperaGrupo" height="150" width="450"></canvas>

                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Por Centros</h5>

                </div>
                <div class="ibox-content">
                    <canvas id="listaEsperaCentros" height="200" width="550"></canvas>

                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Detalle</h5>
                    <div class="pull-right">
                        <div class="btn-group centrosListaEspera">
                            @{
                                List<RadioWeb.Models.CENTROS> oListaCentros = (List<RadioWeb.Models.CENTROS>)ViewData["Centros"];
                                var claseActiva = "";
                                foreach (var item in oListaCentros)
                                {
                                    if (item.NOMBRE == "Tibidabo")
                                    {
                                        claseActiva = "active";
                                    }
                                    else
                                    {
                                        claseActiva = "";
                                    }
                                <button class="btn btn-xs btn-white @claseActiva" data-val="@item.NOMBRE" type="button">@item.NOMBRE</button>         
                                }
                                        
 }
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                   @* <div>
                                        <span class="pull-right text-right">
                                        <small>Total Lista de Espera Global<strong> @ViewBag.TotalListaEspera</strong></small>
                                            
                                        </span>
                            <h3 id="Centro" class="font-bold no-margins">
                                
                            </h3>
                          
                        </div>*@
                    <div class="row ">
                        <div class="col-lg-3">
                             <div id="DivChartContainer">
                                <canvas id="doughnutCentro" width="200" height="200"></canvas>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div id="containerListaGrupos">
                               
                            </div>                           
                        </div>
                        <div class="col-lg-2">
                            <div id="containerListaAparato">
                               
                            </div>                           
                        </div>
                        <div class="col-lg-5">                           
                            <div id="containerListaExploraciones">
                               
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
@section scripts{
    <!-- Flot -->
    <script src="~/js/plugins/flot/jquery.flot.js"></script>
    <script src="~/js/plugins/flot/jquery.flot.tooltip.min.js"></script>
    <script src="~/js/plugins/flot/jquery.flot.resize.js"></script>
    <script src="~/js/plugins/flot/jquery.flot.pie.js"></script>
    <script src="~/js/plugins/flot/jquery.flot.time.js"></script>
    <script src="~/js/plugins/flot/jquery.flot.categories.js"></script>

    <!-- ChartJS-->
    <script src="~/js/plugins/chartJs/Chart.js"></script>
    <script src="@RadioWeb.Helpers.UrlExtender.ContentLastWrite(@Url, "~/js/custom/estadisticas/listaespera.js")"></script>

}

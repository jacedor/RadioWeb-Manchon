@model IEnumerable<RadioWeb.Models.Estadistica.ItemEstadisticoOcupacion>
<div class="spiner-example hide" id="spiner-ocupacion">
    <div class="sk-spinner sk-spinner-circle" style="height: 60px; width: 60px;">
        <div class="sk-circle1 sk-circle"></div>
        <div class="sk-circle2 sk-circle"></div>
        <div class="sk-circle3 sk-circle"></div>
        <div class="sk-circle4 sk-circle"></div>
        <div class="sk-circle5 sk-circle"></div>
        <div class="sk-circle6 sk-circle"></div>
        <div class="sk-circle7 sk-circle"></div>
        <div class="sk-circle8 sk-circle"></div>
        <div class="sk-circle9 sk-circle"></div>
        <div class="sk-circle10 sk-circle"></div>
        <div class="sk-circle11 sk-circle"></div>
        <div class="sk-circle12 sk-circle"></div>
    </div>
</div>

@{
    int media = 0;
    int aparatoAConsiderar = 0;
    string esaparatosinHuecos = "";
}
@foreach (var item in Model)
{
    esaparatosinHuecos = "";
    media = media + item.PorcentageOcupados;
    if (item.HuecosHorario > 0) {
        aparatoAConsiderar = aparatoAConsiderar + 1;

    }
    else
    {
        esaparatosinHuecos = "bg-danger";
    }
    <tr>

        <td class="@esaparatosinHuecos">@item.Fecha</td>
        <td class="@esaparatosinHuecos">
            @item.CodFil 
            
            <a data-oid="@item.IOR_APARATO" data-toggle="modal" data-target="#modal-form-HorasOcupacion" class="btn btn-success btn-facebook ocupacionhoras btn-xs right"  style="float:right" href="#">
                    <i class="fa  fa-clock-o" style="color: black;" title="Ver Desglose por Horas"></i>&nbsp; Ocupación Horas
                </a>
            </td>
        <td class="@esaparatosinHuecos">@item.HuecosHorario</td>
        <td class="@esaparatosinHuecos">@item.HuecosOcupados</td>
        <td class="@esaparatosinHuecos stat-list" style="min-width:400px;">
            <div class="stat-percent"> @item.PorcentageOcupados% </div>
            <div class="progress progress-mini">
                <div style="width:  @item.PorcentageOcupados%;" class="progress-bar"></div>
            </div>
        
        </td>

    </tr>
}
<tr>
    <td colspan="5" style="text-align:right;"><h3>Media de ocupación = @(media / aparatoAConsiderar) %</h3></td>
</tr>


@model IEnumerable<RadioWeb.Models.CENTROSEXTERNOS>

@{
    ViewBag.Title = "Centros Externos";
}

<div class="ibox-title">
    <h5>
        <strong>
            Mantenimiento de Centros Externos
        </strong>
    </h5>
    <div class="ibox-tools">
        <a href="/CentrosExternos/Create" class="btn btn-primary btn-xs">Crear Nuevo</a>
    </div>
</div>
<div class="ibox-content ">

    <table class="table table-hover  table-bordered" id="tblMutuas" data-height="700"
           data-pagination="true"  data-search="true" data-page-size="15" data-page-list="[15,30,50,100,200,1000]">
        <thead>
            <tr>
                <th data-sortable="true">
                    @Html.DisplayNameFor(model => model.OID)
                </th>
                <th data-sortable="true">
                    @Html.DisplayNameFor(model => model.CODMUT)
                </th>
              
                <th data-sortable="true">
                    @Html.DisplayNameFor(model => model.NOMBRE)
                </th>

                <th data-sortable="true">
                    @Html.DisplayNameFor(model => model.VERS)
                </th>
                <th data-sortable="true">
                    @Html.DisplayNameFor(model => model.CONTACTO)
                </th>

                <th>....</th>
            </tr>
            </thead>
        <tbody>
            @foreach (var item in Model)
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CODMUT)
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.NOMBRE)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.VERS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CONTACTO)
                </td>

                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.OID }) |
                    @Html.ActionLink("Borrar", "Delete", new { id = item.OID })
                </td>
            </tr>
}
        </tbody>
    </table>
</div>

@section scripts{

    <script type="text/javascript">

        $(document).ready(function () {
            makeBootstrapTable("tblMutuas");
            $("li[data-view]").removeClass('active');
            $("[data-view=ViewCentrosExternos]").addClass("active");

            $("[data-view=ViewCentrosExternos]").parents("ul").removeClass("collapse");
        });






    </script>

}

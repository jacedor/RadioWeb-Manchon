@model RadioWeb.Models.GAPARATOS

@{
    ViewBag.Title = "Mantenimiento de Grupos";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.OID)
    @Html.HiddenFor(model => model.BORRADO)
    @Html.HiddenFor(model => model.IOR_EMPRESA)

    <div class="tabs-container">
        <ul class="nav nav-tabs">

            <li class="active">
                <a data-toggle="tab" href="#general">Grupo</a>
            </li>

        </ul>

        <div class="tab-content form-horizontal">
            <div id="general" class="tab-pane active">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.BootstrapLabelFor(m => m.COD_GRUP)
                            @Html.EditorFor(model => model.COD_GRUP)
                            @Html.ValidationMessageFor(model => model.COD_GRUP, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.BootstrapLabelFor(m => m.DES_GRUP)
                            @Html.EditorFor(model => model.DES_GRUP)
                            @Html.ValidationMessageFor(model => model.DES_GRUP, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
            </div>
        </div>


        <div class="user-button ibox-content">
            <div class="row">
                <div class="col-md-6">
                    <button class="btn btn-default btn-sm btn-block"><i class="fa fa-backward">@Html.ActionLink("Volver a Lista de Grupos", "Index", "Grupos")</i></button>

                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary btn-sm btn-block">
                        <i class="fa fa-save"></i>Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>

}







@model RadioWeb.Models.PAGO_PACIENTE

@using (Html.BeginForm("PagarTodo","Pagos2",FormMethod.Post,new {  }))
{
    @Html.AntiForgeryToken()

    <div id="modal-form-pagoTotal" class="modal fade " aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button data-dismiss="modal" class="close" type="button">
                        <span aria-hidden="true">×</span><span class="sr-only">Cerrar</span>
                    </button>
                    <h2 class="modal-title"><b>@Model.NPACIENTE</b> 
                   
                    </h2>
                    <h3>
                       (@Model.EXPLORACION - @Model.FECHAPAGO.Value.ToShortDateString())
                    </h3>
                </div>


                <div class="modal-body">
             <div class="form-horizontal">


                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(model => model.IOR_PACIENTE)
                        @Html.HiddenFor(model => model.FECHA)

                        <div class="form-group">
                            <div class=" col-md-12">
                                <div class="col-md-12" style="padding-left:0px;padding-right:0px;">
                                    <div class="editor-label">
                                        @Html.BootstrapLabelFor(m => m.FECHAPAGO)
                                    </div>
                                    <div class="editor-field">
                                        <input autocomplete="off" class="form-control date-picker" data-val="true" data-val-date="El campo FECHA debe ser una fecha."
                                               id="FECHAPAGO" name="FECHAPAGO" type="text" value="@Model.FECHAPAGO.Value.ToString("dd/MM/yyyy")">
                                        @Html.ValidationMessageFor(model => model.FECHA, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class=" col-md-12">
                                <div class="col-md-12" style="padding-left:0px;padding-right:0px;">
                                    <div class="editor-label">
                                        @Html.BootstrapLabelFor(m => m.TIPOPAGO)
                                    </div>
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.TIPOPAGO)
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-12 text-right">
                                <input type="submit" value="Pagar Total" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>


                </div>

                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-white" type="button">Cancelar</button>

                </div>

            </div>
        </div>
    
        </div>
  
}


